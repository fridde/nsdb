{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'LÃ¤gg till grupper' %}

{% block page_content %}
    <div class="accordion" id="add-groups-container">
        {% for segment, groups in all_groups %}
            <div class="accordion-item" data-segment="{{ segment }}">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_{{ segment }}">
                        {{ segment }}
                    </button>
                </h2>
                <div id="collapse_{{ segment }}" class="accordion-collapse collapse" data-bs-parent="#add-groups-container">
                    <div class="accordion-body">
                        <div class="input-group m-3 w-25">
                            <button class="add-groups-button">Add groups permanently</button>
                            <span class="input-group-text ms-3">StartYear</span>
                            <input name="start-year" class="form-control text-center" size="4" type="number" value="{{ years[segment] + 1 }}">

                        </div>
                        <table>
                            {% for school in schools %}
                                <tr>
                                    <td>{{ school.Name }}</td>
                                    <td><input data-school="{{ school.id }}" class="group-number form-control w-50 text-center" type="number" min="0" value="{{ groups[school.id] }}"></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
{% endblock %}


